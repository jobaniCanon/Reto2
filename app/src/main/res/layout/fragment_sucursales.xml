                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nameC1"
                        android:fontFamily="@font/indie"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textColor="#FF000000"/>

                    <TextView
                        android:id="@+id/tvDescriptionP1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/garamondi"
                        android:textSize="14sp"
                        android:text="@string/descriptionC1" />

                    <TextView
                        android:id="@+id/tvPriceP1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/garamondi"
                        android:textSize="14sp"
                        android:text="@string/precioC1" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/textView12"
